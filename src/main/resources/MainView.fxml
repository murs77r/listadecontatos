<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.listadecontatos.controller.ContactController">
   <children>
      <SplitPane dividerPositions="0.4" layoutX="200.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="contactListView" layoutX="18.0" layoutY="14.0" prefHeight="398.0" prefWidth="236.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Formulário de Contato" />
                        <Label text="Nome Completo:" />
                        <TextField fx:id="nameField" promptText="Ex: Ana Silva" />
                        <Label text="Telefone com DDD:" />
                        <TextField fx:id="phoneField" promptText="(11) 99999-8888" />
                        <HBox spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleAddButton" text="Adicionar" />
                              <Button mnemonicParsing="false" onAction="#handleSaveButton" text="Salvar Edição" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleDeleteButton" style="-fx-background-color: #ffcccc;" text="Excluir" />
                              <Button mnemonicParsing="false" onAction="#handleClearButton" text="Limpar" />
                           </children>
                        </HBox>
                        <Label fx:id="statusLabel" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>