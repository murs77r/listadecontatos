<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Este é um arquivo FXML (FX Markup Language), um formato baseado em XML para definir
    a interface do usuário de uma aplicação JavaFX. Ele separa o layout da lógica da aplicação.
-->

<!-- Instruções de processamento para importar as classes JavaFX necessárias para os componentes da UI. -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- 
    O elemento raiz da nossa interface. AnchorPane permite que os filhos sejam "ancorados"
    nas bordas do painel.
    - xmlns e xmlns:fx definem os namespaces para JavaFX.
    - fx:controller especifica a classe controller que gerenciará os eventos e dados desta view.
-->
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.listadecontatos.controller.ContactController">
   <children>
      <!-- 
          SplitPane divide a UI em duas ou mais seções redimensionáveis.
          - dividerPositions define a posição inicial do divisor (40% para a esquerda, 60% para a direita).
          - As âncoras (AnchorPane.bottomAnchor, etc.) fazem o SplitPane preencher todo o AnchorPane pai.
      -->
      <SplitPane dividerPositions="0.4" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <!-- Painel esquerdo do SplitPane, que conterá a lista de contatos. -->
          <AnchorPane>
               <children>
                  <!-- 
                      ListView para exibir a lista de contatos.
                      - fx:id="contactListView" é o ID que permite injetar este componente no controller.
                      - As âncoras fazem a ListView preencher todo o AnchorPane pai.
                  -->
                  <ListView fx:id="contactListView" prefHeight="398.0" prefWidth="236.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
          <!-- Painel direito do SplitPane, que conterá o formulário de edição/adição. -->
          <AnchorPane>
               <children>
                  <!-- 
                      VBox organiza seus filhos em uma única coluna vertical.
                      - spacing="10.0" define um espaçamento de 10 pixels entre cada filho.
                      - As âncoras definem uma margem de 20 pixels das bordas do painel.
                  -->
                  <VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                     <children>
                        <!-- Título do formulário. -->
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Formulário de Contato" />
                        
                        <!-- Campo para o nome do contato. -->
                        <Label text="Nome Completo:" />
                        <TextField fx:id="nameField" promptText="Ex: Ana Silva" />
                        
                        <!-- Campo para o telefone do contato. -->
                        <Label text="Telefone com DDD:" />
                        <TextField fx:id="phoneField" promptText="(11) 99999-8888" />
                        
                        <!-- 
                            HBox organiza seus filhos em uma única linha horizontal.
                            Usado para agrupar os botões de ação.
                        -->
                        <HBox spacing="10.0">
                           <children>
                              <!-- Botão Adicionar. onAction="#handleAddButton" define que o método handleAddButton no controller será chamado ao clicar. -->
                              <Button onAction="#handleAddButton" text="Adicionar" />
                              <!-- Botão Salvar Edição. onAction="#handleSaveButton" chama o método correspondente no controller. -->
                              <Button onAction="#handleSaveButton" text="Salvar Edição" />
                           </children>
                        </HBox>
                        
                        <HBox spacing="10.0">
                           <children>
                              <!-- Botão Excluir. onAction="#handleDeleteButton" chama o método correspondente. -->
                              <Button onAction="#handleDeleteButton" style="-fx-background-color: #ffcccc;" text="Excluir" />
                              <!-- Botão Limpar. onAction="#handleClearButton" chama o método correspondente. -->
                              <Button onAction="#handleClearButton" text="Limpar" />
                           </children>
                        </HBox>
                        
                        <!-- Label para exibir mensagens de status (sucesso, erro, etc.). -->
                        <Label fx:id="statusLabel" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>